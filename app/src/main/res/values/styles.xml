        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="profile_lable_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bright_teal</item>
        <item name="android:layout_marginTop">17.4dp</item>
        <item name="android:textSize">13.4sp</item>
    </style>

    <style name="profile_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#090909</item>
        <item name="android:layout_marginTop">4dp</item>
