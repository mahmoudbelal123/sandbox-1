<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/joyride_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/default_padding_20"
        android:layout_weight="1"
        tools:ignore="ContentDescription" />

    <com.appster.turtle.widget.CustomTextView
        android:id="@+id/joyride_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding_20"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_24"
        app:customFont="@string/font_medium" />

    <com.appster.turtle.widget.CustomTextView
        android:id="@+id/joyride_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_60"
        android:gravity="center"
        android:minLines="3"
        android:paddingLeft="@dimen/default_padding_20"
        android:paddingRight="@dimen/default_padding_20"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textSizeMedium" />

</LinearLayout>