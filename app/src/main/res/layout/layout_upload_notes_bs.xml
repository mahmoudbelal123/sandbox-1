<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/margin_5">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_22"
            android:paddingTop="@dimen/margin_22">

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="@dimen/width_0"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <com.appster.turtle.widget.CustomTextView
                android:id="@+id/iv_drive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_32"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableTop="@drawable/drive_icon"
                android:gravity="center"
                android:text="@string/drive"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_12"
                app:customFont="@string/bruta_condensed_glb_semi_bold"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent" />

            <com.appster.turtle.widget.CustomTextView
                android:id="@+id/iv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:drawablePadding="@dimen/dimen_10"
                android:drawableTop="@drawable/gallery_icon"
                android:gravity="center"
                android:text="@string/gallery"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_12"
                app:customFont="@string/bruta_condensed_glb_semi_bold"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</layout>