<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="240dp"
        android:layout_height="@dimen/dimen_65"
        android:layout_marginEnd="@dimen/margin_15"
        android:layout_marginTop="@dimen/default_padding_20"
        android:elevation="@dimen/margin_8"
        android:visibility="visible">

        <ImageView
            android:id="@+id/view"
            android:layout_width="@dimen/margin_16"
            android:layout_height="@dimen/margin_16"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dp_3"
            android:scaleType="center"
            android:visibility="gone"
            android:src="@drawable/ic_arrow_drop_up_black" />

        <RelativeLayout
            android:id="@+id/ll_reaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@drawable/reactionbg"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/iv_smile"
            android:layout_width="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_13"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"
            android:src="@drawable/like_apng"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/iv_love"
            android:layout_width="@dimen/margin_40"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_13"
            android:layout_alignParentBottom="true"
            android:scaleType="centerInside"
            android:layout_marginEnd="@dimen/dimen_2"
            android:layout_toStartOf="@+id/iv_angry"
            android:src="@drawable/heart" />


        <ImageView
            android:id="@+id/iv_angry"
            android:layout_width="@dimen/margin_40"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/iv_surprised"
            android:layout_marginTop="@dimen/margin_13"
            android:src="@drawable/angry" />


        <ImageView
            android:id="@+id/iv_surprised"
            android:layout_width="@dimen/margin_40"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dimen_12"
            android:layout_toStartOf="@+id/iv_tear"
            android:src="@drawable/surprised" />


        <ImageView
            android:id="@+id/iv_tear"
            android:layout_width="@dimen/margin_40"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_13"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/iv_grin"
            android:src="@drawable/tear" />


        <ImageView
            android:id="@+id/iv_grin"
            android:layout_width="@dimen/margin_40"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_13"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/grin" />
    </RelativeLayout>
</layout>