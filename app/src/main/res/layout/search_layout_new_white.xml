<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.appster.turtle.widget.CustomEditText
            android:id="@+id/et_search"
            style="@style/noise_edittxt_style_signup"
            android:alpha="0.7"
            android:clickable="false"
            android:drawablePadding="@dimen/dimen_7_9"
            android:drawableStart="@drawable/search_grey"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:hint="@string/search_hint_room_side_menu"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textColorHint="@color/app_white"
            android:textCursorDrawable="@color/app_white"
            android:textSize="@dimen/textsize_17_3"
            app:customFont="@string/eina_01_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_search_footer"
            android:layout_width="@dimen/width_0"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginTop="@dimen/dimen_4"
            android:alpha="0.4"
            android:visibility="invisible"
            android:background="@color/app_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_search" />

    </android.support.constraint.ConstraintLayout>
</layout>
